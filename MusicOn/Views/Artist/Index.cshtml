@model IEnumerable<Assignment5.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artist List";
}

<h2>@ViewBag.Title</h2>

<p>
    @if (ViewContext.HttpContext.User.IsInRole("Executive"))
    {
        @Html.ActionLink("Create New Artist", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="@item.UrlArtist" alt="@item.Name" width="100" height="100" />
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthName)
    </td>
    <td>
        @item.BirthOrStartDate.ToString("yyyy-MM-dd")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.ActionLink("Details", "DetailsWithMediaItems", new { id = item.Id })
    </td>
</tr>
}

</table>
